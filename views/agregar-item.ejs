<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
  <%- include('../partials/nav.ejs') %>
      <div class="container">
        <div class="row">   
            <form class="col s12" action="/items" method="POST">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix">shopping_cart</i>
                  <input id="item_name" type="text" class="validate" name="name">
                  <label for="item_name" name="name">Item Name</label>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix">request_quote</i>
                  <input id="icon_telephone" type="tel" class="validate" name="price">
                  <label for="icon_telephone" name="price">Price</label>
                </div>
              </div>
              <button class="btn">Add item</button>
            </form>
          </div>
      </div>
      
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <script>
        document.addEventListener('DOMContentLoaded', function(event) {
          M.updateTextFields();
        })
      </script>
</body>
</html>